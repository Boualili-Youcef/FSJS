<div class="movieDetails">
  <div class="details">
    <a href="/movies/<%= movie._id %>">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        fill="currentColor"
        class="bi bi-x-circle-fill"
        viewBox="0 0 16 16"
        color="black"
      >
        <path
          d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z"
        />
      </svg>
    </a>
     <form action="/movies/update/<%= movie._id %>" method="POST">
        <!-- Titre -->
        <div class="form-group">
          <label for="title">Titre du film</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="<%= movie.title %>"
          />
        </div>
  
        <!-- Synopsis -->
        <div class="form-group">
          <label for="synopsis">Synopsis</label>
          <textarea
            class="form-control"
            id="synopsis"
            name="synopsis"
            rows="3"
          ><%= movie.synopsis %></textarea>
        </div>
      <label for="image">Affiche</label>
      <div class="image_container">
        <img
          id="preview"
          src="<%= movie.image %>"
          alt="AperÃ§u"
          style="max-width: 200px"
        />
      </div>

      <div class="mb-3">
        <input class="form-control" type="file" id="formFile" name="imageFile" />
    </div>
      <div class="sub_btn">
        <button type="submit" class="btn btn-lg btn-primary">Save</button>
        <a href="/movies/<%= movie._id %>" class="btn btn-secondary btn-lg">Cancel</a>
    </div>
    </form>
  </div>
</div>
