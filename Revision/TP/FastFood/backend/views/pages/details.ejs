<div class="scrollable">
  <div class="card food" style="width: 80%">
    <div
      class="card-body"
      style="
        display: flex;
        justify-content: space-between;
        align-items: baseline;
      "
    >
      <h5 class="card-title"><%= food.title %></h5>
      <a href="/menu"><button>X</button></a>
    </div>
    <div class="food-infos-image">
      <% if(food.image) { %>
      <img class="card-img-top" src="<%= food.image %>" />
      <% } else { %>
      <img
        src="/images/cinema5_02.jpg"
        class="card-img-top"
        alt="Fond vecteur créé par kenshinstock - fr.freepik.com"
      />
      <% } %>
    </div>
    <div class="card-body">
      <p class="card-text"><%= food.description %></p>
      <p class="card-price"><%= food.price %></p>
      <div style="display: flex; justify-content: space-between">
        <a href="/login/menu/update/<%= food._id %>" class="btn btn-dark btn-sm"
          >Edit</a
        >
        <a href="/movies/delete/<%= food._id %>" class="btn btn-danger btn-sm"
          >Delete</a
        >
      </div>
    </div>
  </div>
</div>
